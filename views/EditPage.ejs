<% include ./partials/header %>

<div class="row">
	<div class="col-md-12">
		<div class="container" id="postContainer">
			<h1 style="text-align: center;">Edit Post</h1>
			<form action="/IndexPage/<%= foundPost._id%>?_method=PUT" method="post">
				<div class="form-group">
					<label for="title">Title</label><br>
					<input class = "form-control" id="title" type="text" placeholder="Title" name="post[title]" value="<%= foundPost.title%>">
				</div>
				<div class="form-group">
					<label for="title">Image Url</label><br>
					<input class = "form-control" id="url" type="text" placeholder="image url" name="post[url]" value="<%= foundPost.url%>">
				</div>
				<div class="form-group">
					<textarea class="form-control" id="question" name="post[content]" rows="8" cols="80"><%= foundPost.content%></textarea>
				</div>
				<div class="form-group">
					<input class = "form-control" type="submit" value="Submit" class="btn btn-primary btn-lg btn-block">
				</div>
			</form>
			<a href="/">Go back</a>
		</div>
	</div>
</div>

<script src="/javascript/nicEdit.js"></script>
<script type="text/javascript">
	bkLib.onDomLoaded(function() {
		new nicEditor({fullPanel : true}).panelInstance('question');
	});
</script>


<% include ./partials/footer %>
