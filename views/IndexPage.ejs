<% include ./partials/header %>

<div class="crop-container">
    <img class="showcase" src="./img/3old.jpg" alt="cars">
</div>
<div class="row">
  <div class="col-md-12 col-lg-8">
    <div class="row left">
      <% posts.forEach(function(post){ %>
      <div class="col-sm-12 col-md-4">
        <div class="card-decks" style="margin: 0 0 0 5%;">
            <div id="post-card" class="card">
              <img class="card-img-top" src="https://cdn.jevelin.shufflehound.com/wp-content/uploads/2016/02/Blog_1-1024x683.jpg" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title"><%= post.title %> - <%= post.subject%></h5>
                <p class="card-text"><%= post.content%></p>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
  <div class="col-md-12 col-lg-4">
      <div class="card" style="width: 80%; margin: 0 10% 0 10%;">
        <img class="card-img-top" src="./img/profile.jpg" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">Le Thi Yen Nhi</h5>
          <p class="card-text">Passion for traveling wont stop anywhere!</p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Travel many</li>
          <li class="list-group-item">Live fun</li>
          <li class="list-group-item">Love more</li>
        </ul>
        <div id="socilaArea" class="card-body">
          <a href="#"><i id="socialIcons" class="fa fa-2x fa-youtube" aria-hidden="true"></i></a>
          <a href="#"><i id="socialIcons" class="fa fa-2x fa-snapchat-square" aria-hidden="true"></i></a>
          <a href="#"><i id="socialIcons" class="fa fa-2x fa-twitter" aria-hidden="true"></i></a>
          <a href="#"><i id="socialIcons" class="fa fa-2x fa-facebook" aria-hidden="true"></i></a>
          <a href="#"><i id="socialIcons" class="fa fa-2x fa-instagram" aria-hidden="true"></i></i></a>
          <a href="/NewPost" id="socialIcons" class="btn btn-outline-secondary newpost">Add New Post</a>
        </div>
      </div>
      <div class="card" style="width: 80%; margin: 20px 10% 0 10%;">
        <div class="card-body">
          <p class="card-text">
            <form>
              <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
              </div>
              <button class="btn btn-outline-secondary" type="submit">Submit</button>
            </form>
          </p>
        </div>
      </div>
  </div>
</div>

<nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center">
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Next</span>
      </a>
    </li>
  </ul>
</nav>




<% include ./partials/footer %>
